<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_arrow_back_add_phone_book"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력하기"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/iv_arrow_back_add_phone_book"
            app:layout_constraintBottom_toBottomOf="@id/iv_arrow_back_add_phone_book"
            app:layout_constraintStart_toEndOf="@id/iv_arrow_back_add_phone_book"
            android:layout_marginLeft="15dp"/>

        <View
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#dcdcdc"
            app:layout_constraintBottom_toBottomOf="@id/layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dummy1_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="36"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_name_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy2_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="24"
            app:layout_constraintTop_toBottomOf="@id/tv_name_must_have_add_phone_book"
            app:layout_constraintBottom_toTopOf="@id/iv_phoneNumber_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy3_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="24"
            app:layout_constraintBottom_toTopOf="@id/iv_text_add_phone_book"
            app:layout_constraintTop_toBottomOf="@id/tv_phoneNumber_must_have_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy4_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="40"
            app:layout_constraintTop_toBottomOf="@id/tv_text_must_have_add_phone_book"
            app:layout_constraintBottom_toTopOf="@id/tv_save_button_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy5_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_save_button_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy6_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="8"
            app:layout_constraintTop_toBottomOf="@id/iv_name_add_phone_book"
            app:layout_constraintBottom_toTopOf="@id/tv_name_must_have_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy7_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="8"
            app:layout_constraintTop_toBottomOf="@id/iv_phoneNumber_add_phone_book"
            app:layout_constraintBottom_toTopOf="@id/tv_phoneNumber_must_have_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dummy8_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="8"
            app:layout_constraintTop_toBottomOf="@id/iv_text_add_phone_book"
            app:layout_constraintBottom_toTopOf="@id/tv_text_must_have_add_phone_book"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_name_add_phone_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/input_box"
            app:layout_constraintVertical_weight="60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dummy1_choose_option"
            app:layout_constraintBottom_toTopOf="@id/dummy6_choose_option"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>

        <EditText
            android:id="@+id/et_name_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:ems="15"
            android:hint="홍길동"
            android:inputType="textPersonName"
            android:maxLength="8"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            app:layout_constraintBottom_toBottomOf="@id/iv_name_add_phone_book"
            app:layout_constraintStart_toStartOf="@id/iv_name_add_phone_book"
            app:layout_constraintTop_toTopOf="@id/iv_name_add_phone_book"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_weight="60" />

        <TextView
            android:id="@+id/tv_name_must_have_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="* 필수사항"
            android:textSize="14sp"
            android:textColor="#707070"
            app:layout_constraintVertical_weight="17"
            app:layout_constraintStart_toStartOf="@id/iv_name_add_phone_book"
            app:layout_constraintTop_toBottomOf="@id/dummy6_choose_option"/>

        <TextView
            android:id="@+id/tv_name_number_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="0/8 자"
            android:textSize="14sp"
            android:textColor="#707070"
            app:layout_constraintVertical_weight="17"
            app:layout_constraintEnd_toEndOf="@id/iv_name_add_phone_book"
            app:layout_constraintTop_toTopOf="@id/tv_name_must_have_add_phone_book"/>

        <ImageView
            android:id="@+id/iv_phoneNumber_add_phone_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/input_box"
            app:layout_constraintVertical_weight="60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dummy2_choose_option"
            app:layout_constraintBottom_toTopOf="@id/dummy7_choose_option"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>

        <EditText
            android:id="@+id/et_phoneNumber_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:hint="010 1234 1234"
            android:inputType="number"
            android:layout_marginLeft="16dp"
            android:ems="15"
            android:maxLength="13"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:background="@null"
            android:textColorHighlight="@color/white"
            app:layout_constraintVertical_weight="60"
            app:layout_constraintStart_toStartOf="@id/iv_phoneNumber_add_phone_book"
            app:layout_constraintTop_toTopOf="@id/iv_phoneNumber_add_phone_book"
            app:layout_constraintBottom_toBottomOf="@id/iv_phoneNumber_add_phone_book"/>


        <TextView
            android:id="@+id/tv_phoneNumber_must_have_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="* 필수사항"
            android:textSize="14sp"
            android:textColor="#707070"
            app:layout_constraintVertical_weight="17"
            app:layout_constraintStart_toStartOf="@id/iv_phoneNumber_add_phone_book"
            app:layout_constraintTop_toBottomOf="@id/dummy7_choose_option"/>

        <TextView
            android:id="@+id/tv_save_button_add_phone_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@drawable/save_button_text_color"
            android:text="저장"
            android:gravity="center"
            android:elevation="10dp"
            app:layout_constraintVertical_weight="40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dummy5_choose_option"
            app:layout_constraintTop_toBottomOf="@id/dummy4_choose_option"
            android:background="@drawable/save_button_effect"/>

        <ImageView
            android:id="@+id/iv_text_add_phone_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/input_box"
            app:layout_constraintVertical_weight="140"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dummy3_choose_option"
            app:layout_constraintBottom_toTopOf="@id/dummy8_choose_option"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" />

        <EditText
            android:id="@+id/et_text_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="top"
            android:hint="신고시 추가 내용을 입력해주세요.\n예) 천식이 있습니다."
            android:inputType="textMultiLine"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:scrollHorizontally="false"
            android:maxLines="5"
            android:singleLine="true"
            android:maxLength="30"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:background="@null"
            android:textColorHighlight="@color/white"
            app:layout_constraintVertical_weight="140"
            app:layout_constraintStart_toStartOf="@id/iv_text_add_phone_book"
            app:layout_constraintTop_toTopOf="@id/iv_text_add_phone_book"/>

        <TextView
            android:id="@+id/tv_text_must_have_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="선택사항"
            android:textSize="14sp"
            android:textColor="#707070"
            app:layout_constraintVertical_weight="17"
            app:layout_constraintStart_toStartOf="@id/iv_text_add_phone_book"
            app:layout_constraintTop_toBottomOf="@id/dummy8_choose_option"/>


        <TextView
            android:id="@+id/tv_text_number_add_phone_book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="0/30 자"
            android:textSize="14sp"
            android:textColor="#707070"
            app:layout_constraintVertical_weight="36"
            app:layout_constraintEnd_toEndOf="@id/iv_text_add_phone_book"
            app:layout_constraintTop_toTopOf="@id/tv_text_must_have_add_phone_book"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>