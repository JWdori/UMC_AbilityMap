<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/camera2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="picture"
        app:layout_constraintTop_toTopOf="@id/camera2"
        app:layout_constraintEnd_toEndOf="@id/camera2"

        app:layout_constraintStart_toStartOf="@id/camera2"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/next_button_background"
        android:layout_width="168dp"
        android:layout_height="60dp"
        android:layout_marginTop="494dp"
        android:background="@drawable/rounded_corner_send_btn"
        app:layout_constraintBottom_toBottomOf="@id/camera2"
        app:layout_constraintRight_toRightOf="@id/camera2"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="38dp"

        android:visibility="gone"

        ></View>

    <TextView
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4.8sp"
        android:shadowColor="#11000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="24sp"

        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/next_button_background"
        app:layout_constraintTop_toTopOf="@id/next_button_background"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="15dp"

        android:visibility="gone"
        />

    <View
        android:id="@+id/capture_btn1"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#000000"

        app:layout_constraintBottom_toBottomOf="@id/camera2"
        app:layout_constraintStart_toStartOf="@id/camera2"
        app:layout_constraintEnd_toEndOf="@id/camera2"
        android:layout_marginBottom="30dp"
        />
    <View
        android:id="@+id/capture_btn2"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#ffffff"

        app:layout_constraintStart_toStartOf="@id/capture_btn1"
        app:layout_constraintTop_toTopOf="@id/capture_btn1"
        app:layout_constraintEnd_toEndOf="@id/capture_btn1"
        app:layout_constraintBottom_toBottomOf="@id/capture_btn1"
        />



    <View
        android:id="@+id/camera_cancel_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_btn"
        app:layout_constraintBottom_toBottomOf="@id/camera2"
        app:layout_constraintStart_toStartOf="@id/camera2"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#c8c8c8"
        ></View>

    <TextView
        android:id="@+id/cancel_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="3.6sp"
        android:shadowColor="#11000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="취소"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/camera_cancel_btn"
        app:layout_constraintTop_toTopOf="@id/camera_cancel_btn"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="13dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>