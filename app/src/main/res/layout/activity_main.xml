<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/layout_tool_bar"
            android:name="com.naver.maps.map.MapFragment" />

        <ImageButton
            android:id="@+id/repot_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/report_button"
            android:visibility="visible"
            android:background="#00ffffff"
            android:layout_alignRight="@+id/map"
            android:layout_above="@+id/call_button"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            />

        <ImageButton
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_button"
            android:visibility="visible"
            android:background="#00ffffff"
            android:layout_alignRight="@+id/map"
            android:layout_alignBottom="@+id/map"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="16dp"
            />

        <include
            android:id="@+id/layout_tool_bar"
            layout="@layout/tool_bar" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/fragment_navigation_header"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:backgroundTint="#007fff"
        app:itemTextColor="@color/white"
        app:itemIconSize="32dp"
        app:itemIconTint="@color/white"
        app:itemBackground="@drawable/view_line"
        app:itemTextAppearance="@style/Widget.BottomNavigationView" />

</androidx.drawerlayout.widget.DrawerLayout>
