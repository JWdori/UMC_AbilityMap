<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/dummy1_menu_book"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="23"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_back_arrow_menu_book"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dummy2_menu_book"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="27"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indicator_menu_book"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/tv_back_arrow_menu_book"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintVertical_weight="48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dummy1_menu_book"
        app:layout_constraintBottom_toTopOf="@id/vp_viewpager_menu_book"
        android:layout_marginLeft="5dp"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_viewpager_menu_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layout_constraintVertical_weight="422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_back_arrow_menu_book"
        app:layout_constraintBottom_toTopOf="@id/indicator_menu_book"/>

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator_menu_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        app:ci_drawable="@drawable/indicator_clicked"
        app:ci_drawable_unselected="@drawable/indicator"
        app:ci_margin="10dp"
        app:ci_width="5dp"
        app:layout_constraintVertical_weight="48"
        app:layout_constraintStart_toEndOf="@id/iv_arrow_left_menu_book"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow_right_menu_book"
        app:layout_constraintTop_toBottomOf="@id/vp_viewpager_menu_book"
        app:layout_constraintBottom_toTopOf="@id/dummy2_menu_book"/>

    <ImageView
        android:id="@+id/iv_arrow_left_menu_book"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_back_black"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/indicator_menu_book"
        app:layout_constraintBottom_toBottomOf="@id/indicator_menu_book"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_arrow_right_menu_book"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_foward_black"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/indicator_menu_book"
        app:layout_constraintBottom_toBottomOf="@id/indicator_menu_book"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>