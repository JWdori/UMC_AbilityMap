<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_oss"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_arrow_oss"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_oss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오픈소스 라이선스"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4.8sp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toTopOf="@id/iv_arrow_oss"
            app:layout_constraintBottom_toBottomOf="@id/iv_arrow_oss"
            app:layout_constraintStart_toEndOf="@id/iv_arrow_oss"
            android:layout_marginLeft="15dp"/>

        <View
            android:id="@+id/view_oss"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#dcdcdc"
            app:layout_constraintBottom_toBottomOf="@id/layout_oss"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_oss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_toggle_oss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toggle\n-  https://github.com/singhangadin/android-toggle"
            android:textColorLink="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="2.4sp"/>

        <TextView
            android:id="@+id/tv_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright (C) 2018 Angad Singh
            \n\nLicensed under the Apache License,
            \nVersion 2.0 (the &quot;License&quot;);
            \nyou may not use this file except in compliance with the License.
            \nYou may obtain a copy of the License at
            \n\n     http://www.apache.org/licenses/LICENSE-2.0
            \n\nUnless required by applicable law or agreed to in writing, software distributed under the License is distributed on an &quot;AS IS&quot; BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the License for the specific language governing permissions and limitations under the License."
            android:background="#eeeeee"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="2.4sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColorLink="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_toggle_oss"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>