    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_home_menu_alarm"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_item_home_menu_alarm"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/icon_alarm"
                android:layout_marginLeft="31.3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_item_home_menu_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림"
                android:textSize="20sp"
                android:layout_marginLeft="78dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_menu_alarm"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_menu_alarm"/>

            <View
                android:id="@+id/line_view_alarm"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="78dp"
                app:layout_constraintTop_toTopOf="@id/cl_item_home_menu_alarm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_home_menu_call"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_item_home_menu_call"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/icon_emergency_call"
                android:layout_marginLeft="31.3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_item_home_menu_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="긴급 연락처"
                android:textSize="20sp"
                android:layout_marginLeft="78dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_menu_call"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_menu_call"/>

            <View
                android:id="@+id/line_view_call"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="78dp"
                app:layout_constraintTop_toTopOf="@id/cl_item_home_menu_call"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_home_menu_report"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_item_home_menu_report"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/report"
                android:layout_marginLeft="31.3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_item_home_menu_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위험 제보하기"
                android:textSize="20sp"
                android:layout_marginLeft="78dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_menu_report"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_menu_report"/>

            <View
                android:id="@+id/line_view_report"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="78dp"
                app:layout_constraintTop_toTopOf="@id/cl_item_home_menu_report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_home_menu_instruction"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_item_home_menu_instruction"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/icon_menu_book"
                android:layout_marginLeft="31.3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_item_home_menu_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용 설명서"
                android:textSize="20sp"
                android:layout_marginLeft="78dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_menu_instruction"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_menu_instruction"/>

            <View
                android:id="@+id/line_view_instruction"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="78dp"
                app:layout_constraintTop_toTopOf="@id/cl_item_home_menu_instruction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_home_menu_review"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_item_home_menu_review"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/rate_review"
                android:layout_marginLeft="31.3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_item_home_menu_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 리뷰"
                android:textSize="20sp"
                android:layout_marginLeft="78dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_menu_review"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_menu_review"/>

            <View
                android:id="@+id/line_view_review"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="78dp"
                app:layout_constraintTop_toTopOf="@id/cl_item_home_menu_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>