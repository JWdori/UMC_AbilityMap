<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_fragment_menu_book_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_fragment_menu_book_first"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/icon_main_page"/>

    <TextView
        android:id="@+id/tv_fragment_menu_book_first"
        android:text="주요 기능"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:textColor="#000000"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4.8sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_fragment_sub_menu_book_first"
        app:layout_constraintTop_toBottomOf="@id/iv_fragment_menu_book_first"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"/>

    <TextView
        android:id="@+id/tv_fragment_sub_menu_book_first"
        android:text="가장 중요한 기능을\n첫 화면에서 만날 수 있습니다"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:textColor="#707070"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4.8sp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment_menu_book_first"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

