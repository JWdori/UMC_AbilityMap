<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/rectangle"

    >

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="25dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="@id/search_marker"
        app:layout_constraintLeft_toRightOf="@id/search_marker"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#000000"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="3.6sp"
        android:text="서울누리의원"
        />

    <TextView
        android:id="@+id/search_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="1dp"

        android:layout_marginTop="4dp"

        app:layout_constraintBottom_toBottomOf="@+id/search_marker"
        app:layout_constraintLeft_toRightOf="@id/search_marker"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#929292"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2.8sp"
        android:text="경기 성남시 분당구 정자일로 121"

        />


    <TextView
        android:id="@+id/search_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#aaaaaa"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2.4sp"
        app:layout_constraintLeft_toRightOf="@id/search_title"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@id/search_title"
        android:text="병원"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_marker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hos_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>