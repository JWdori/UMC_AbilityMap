    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:contentInsetStart="0dp"
    android:background="#007fff"
    android:id="@+id/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--
        <ImageView
